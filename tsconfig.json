{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src/",
    "paths": {
      "@async-storage": ["async-storage"],
      "@components": ["components"],
      "@constants": ["constants"],
      "@containers": ["containers"],
      "@navigation": ["navigation"],
      "@screens": ["screens"],
      "@services": ["services"],
      "@store": ["store"],
      "@types": ["types"],
      "@utils": ["utils"],

      "@async-storage/*": ["async-storage/*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@containers/*": ["containers/*"],
      "@navigation/*": ["navigation/*"],
      "@screens/*": ["screens/*"],
      "@services/*": ["services/*"],
      "@store/*": ["store/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
